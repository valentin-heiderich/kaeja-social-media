<LoginOrRegisterPopup@Popup>:
    auto_dismiss: True
    title: "Login/Registration"
    size_hint: None, None
    size: 400, 400
    LoginOrRegisterPopupContent:

<LoginOrRegisterPopupContent>:
    orientation: "vertical"
    Label:
        text: "You are currently not logged in. Please login or register."
        size_hint: 1, 0.3
        background_normal: ""
        color: 0.18, 0.65, 0.83, 1

    Button:
        text: "Login"
        color: 1, 1, 1, 1
        background_color: 0.18, 0.65, 0.83, 1
        size_hint: 1, .2
        on_press: root.login()

    Label:
        text: "Or"
        size_hint: 1, 0.3
        background_normal: ""
        color: 0.18, 0.65, 0.83, 1

    Button:
        text: "Register"
        color: 1, 1, 1, 1
        background_color: 0.18, 0.65, 0.83, 1
        size_hint: 1, .2
        on_press: root.register()