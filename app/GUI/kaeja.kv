App:

<App@FloatLayout>
    Image:
        source: 'data/Design/Backgrounds/03.png'
        allow_stretch: True
        keep_ratio: False
    KaejaWidget:


<KaejaWidget@GridLayout>:

    cols: 3
    KaejaServers:
        size_hint: 0.2, 1
        height: self.minimum_height
    Feed:

<KaejaServers@BoxLayout>:
    orientation: 'vertical'
    Label:
        text: 'Joined Servers:'
        size_hint: 1, 0.05
        background_color: 0.4, 0.4, 0.4, 1
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
    ServerList:
    Button:
        text: 'Add Server'
        size_hint: 1, 0.1
        on_press: root.add_server()
        background_normal: ''
        background_down: ''
        background_color: 0.4, 0.4, 0.4, 1


<ServerList@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True

<Feed@BoxLayout>:
    orientation: "vertical"
    Label:
        text: "Chat: "
        size_hint: 1, 0.05
        background_color: 0.4, 0.4, 0.4, 1
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
    PostsWindow:
    CreatePostWindow:
        size_hint: 1, 0.1
        height: self.minimum_height

<PostsWindow@ScrollView>:
    do_scroll_y: True
    Posts:
        cols: 1
        size_hint: 1, None
        height: self.minimum_height

<Posts>:
    cols: 3

<CreatePostWindow>:
    orientation: "horizontal"
    CreatePostInput:
    Button:
        size_hint: 0.1, 1
        text: "Send"
        on_press: root.share()
        background_normal: ''
        background_down: ''
        background_color: 0.4, 0.4, 0.4, 1

<CreatePostInput@GridLayout>:
    rows: 2
    TextInput:
        id: header_input
        hint_text: 'specify an image path if you want to share an image'
        multiline: False
        size_hint: 1, None
        height: self.minimum_height
        background_color: (0.2,0.2,0.2, 1)
        foreground_color: (1,1,1, 1)
    TextInput:
        id: content_input
        hint_text: 'Type your feelings here...'
        multiline: True
        auto_indent: True
        size_hint: 1, None
        height: self.minimum_height
        background_color: (0.2,0.2,0.2, 1)
        foreground_color: (1,1,1, 1)