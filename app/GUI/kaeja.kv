App:

<App@FloatLayout>
    Image:
        source: 'data/Design/Backgrounds/03.png'
        allow_stretch: True
        keep_ratio: False
    KaejaWidget:


<KaejaWidget@GridLayout>:

    cols: 1
    Feed:

<Feed@BoxLayout>:
    orientation: "vertical"
    TopMenuBar:
        size_hint: 1, 0.05
    Label:
        text: "Feed: "
        size_hint: 1, 0.05
        background_color: 0.2, 0.2, 0.2, 0.5
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
    PostsWindow:
    CreatePostWindow:
        size_hint: 1, 0.1
        height: self.minimum_height

<PostsWindow@ScrollView>:
    do_scroll_y: True
    Posts:
        cols: 1
        size_hint: 1, None
        height: self.minimum_height

<Posts>:
    cols: 3

<TopMenuBar@BoxLayout>:
    orientation: "horizontal"
    Button:
        text: "Settings"
        size_hint: 0.5, 1
        background_color: 0.2, 0.2, 0.2, 0.5
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        text: "Kaeja"
        size_hint: 0.5, 1
        background_color: 0.2, 0.2, 0.2, 0.5
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
    Button:
        text: "Create Post"
        size_hint: 0.5, 1
        background_color: 0.2, 0.2, 0.2, 0.5
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
