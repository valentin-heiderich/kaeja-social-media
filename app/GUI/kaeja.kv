App:

<App@FloatLayout>
    Image:
        source: app.background
        allow_stretch: True
        keep_ratio: False
    KaejaWidget:


<KaejaWidget@GridLayout>:

    cols: 1
    Feed:

<Feed>:
    orientation: "vertical"
    TopMenuBar:
        size_hint: 1, 0.05
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.05
        Label:
            text: "Feed: "
            color: 0.18, 0.65, 0.83, 1
            background_color: 0.2, 0.2, 0.2, 0.5
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            text: "Refresh UI"
            color: 0.18, 0.65, 0.83, 1
            background_color: 0.2, 0.2, 0.2, 0.5
            on_press: root.refresh()
    PostsWindow:

<PostsWindow@ScrollView>:
    do_scroll_y: True
    Posts:
        cols: 1
        size_hint: 1, None
        height: self.minimum_height

<Posts>:
    cols: 3

<TopMenuBar>:
    orientation: "horizontal"
    Button:
        text: "Settings"
        size_hint: 0.34, 1
        background_color: 0.2, 0.2, 0.2, 0.5
        on_press: root.show_settings()
    Button:
        text: app.name
        size_hint: 0.34, 1
        background_color: 0.2, 0.2, 0.2, 0.5
        on_press: root.show_account()
    Button:
        text: "Create Post"
        size_hint: 0.34, 1
        background_color: 0.2, 0.2, 0.2, 0.5
        on_press: root.show_post_creation()
